<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button" parent="@style/Widget.MaterialComponents.Button" >
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="layout_constraintWidth_max">256dp</item>
        <item name="layout_constraintWidth_percent">0.7</item>
        <item name="android:elevation">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="button.back" parent="Widget.MaterialComponents.Button" >
        <item name="android:padding">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="color_card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
</resources>